import streamlit as st
import numpy as np
from src.prediction import predict_species

st.set_page_config(page_title="Tree Species Classifier", layout="centered")

st.title("ðŸŒ³ Tree Species Classifier")
st.write("Enter tree features below to predict the species.")

# Example: 4 features â€” Height, Diameter, Leaf Size, Bark Thickness
height = st.slider("Tree Height (m)", 1.0, 50.0, 10.0)
diameter = st.slider("Trunk Diameter (cm)", 1.0, 100.0, 30.0)
leaf_size = st.slider("Leaf Size (cmÂ²)", 10.0, 1000.0, 100.0)
bark_thickness = st.slider("Bark Thickness (mm)", 1.0, 50.0, 5.0)

if st.button("Predict"):
    features = [height, diameter, leaf_size, bark_thickness]
    prediction = predict_species(features)
    st.success(f"ðŸŒ² Predicted Tree Species: {prediction}")
